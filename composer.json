{
    "name": "chevere/xr-server",
    "description": "XR Debug server",
    "homepage": "https://xr-debug.chevere.org",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Rodolfo Berrios",
            "email": "rodolfo@chevere.org",
            "homepage": "https://rodolfoberrios.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "chevere/chevere": "^1.0",
        "chevere/throwable-handler": "^0.8",
        "phpseclib/phpseclib": "~3.0",
        "rodber/php-sse-react": "^0.1",
        "samejack/php-argv": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5",
        "symplify/easy-coding-standard": "^11.1"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "Chevere\\XrServer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chevere\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "bin": [
        "xrserver"
    ],
    "scripts": {
        "check": [
            "composer phpstan",
            "composer test-rep",
            "composer infection"
        ],
        "infection": "infection --only-covered -j10",
        "phpstan": "vendor/bin/phpstan analyze src/ --memory-limit 512M --level 9",
        "test": "vendor/bin/phpunit -c phpunit.xml",
        "test-rep": "vendor/bin/phpunit -c phpunit-report.xml",
        "update-cs": "mkdir -p .ecs && cd .ecs && curl -O https://raw.githubusercontent.com/chevere/code-style/main/.ecs/ecs-chevere.php"
    },
    "scripts-descriptions": {
        "check": "Runs all checks",
        "infection": "Runs infection",
        "phpstan": "Runs phpstan",
        "test": "Run test suite",
        "test-rep": "Run test suite (report)",
        "update-cs": "Update Chevere code style definition"
    }
}
